#include <stdio.h>

/*
    Programa: Batalha Naval - Nível Novato
    Objetivo: Criar um tabuleiro 10x10 e posicionar dois navios
              (um na horizontal e outro na vertical)
    Autor: [Seu Nome]
    Data: [Data de hoje]
*/

#define TAM_TABULEIRO 10
#define TAM_NAVIO 3
#define AGUA 0
#define NAVIO 3

int main() {
    // ==========================
    // 1. DECLARAÇÃO DE VARIÁVEIS
    // ==========================
    int tabuleiro[TAM_TABULEIRO][TAM_TABULEIRO];  // matriz que representa o mar
    int navioHorizontal[TAM_NAVIO];               // vetor que representa o navio horizontal
    int navioVertical[TAM_NAVIO];                 // vetor que representa o navio vertical

    // Coordenadas iniciais dos navios
    // (valores fixos definidos diretamente no código)
    int linhaHorizontal = 2; // linha onde começa o navio horizontal
    int colunaHorizontal = 4; // coluna inicial do navio horizontal

    int linhaVertical = 5;  // linha inicial do navio vertical
    int colunaVertical = 7; // coluna onde será o navio vertical

    // ==========================
    // 2. INICIALIZAR O TABULEIRO
    // ==========================
    // Preenche toda a matriz com 0 (água)
    for (int i = 0; i < TAM_TABULEIRO; i++) {
        for (int j = 0; j < TAM_TABULEIRO; j++) {
            tabuleiro[i][j] = AGUA;
        }
    }

    // ==========================
    // 3. INICIALIZAR OS NAVIOS
    // ==========================
    // Cada posição do vetor recebe o valor 3, representando o navio
    for (int i = 0; i < TAM_NAVIO; i++) {
        navioHorizontal[i] = NAVIO;
        navioVertical[i] = NAVIO;
    }

    // ==========================
    // 4. POSICIONAR OS NAVIOS
    // ==========================
    // Validação simples: garantir que o navio cabe dentro do tabuleiro
    if (colunaHorizontal + TAM_NAVIO <= TAM_TABULEIRO) {
        for (int i = 0; i < TAM_NAVIO; i++) {
            tabuleiro[linhaHorizontal][colunaHorizontal + i] = navioHorizontal[i];
        }
    } else {
        printf("Erro: navio horizontal não cabe no tabuleiro!\n");
        return 1;
    }

    if (linhaVertical + TAM_NAVIO <= TAM_TABULEIRO) {
        for (int i = 0; i < TAM_NAVIO; i++) {
            // Garante que não há sobreposição com outro navio
            if (tabuleiro[linhaVertical + i][colunaVertical] == AGUA) {
                tabuleiro[linhaVertical + i][colunaVertical] = navioVertical[i];
            } else {
                printf("Erro: sobreposição de navios detectada!\n");
                return 1;
            }
        }
    } else {
        printf("Erro: navio vertical não cabe no tabuleiro!\n");
        return 1;
    }

    // ==========================
    // 5. EXIBIR O TABULEIRO
    // ==========================
    printf("\n=== TABULEIRO DE BATALHA NAVAL ===\n\n");
    for (int i = 0; i < TAM_TABULEIRO; i++) {
        for (int j = 0; j < TAM_TABULEIRO; j++) {
            printf("%d ", tabuleiro[i][j]); // imprime 0 (água) ou 3 (navio)
        }
        printf("\n");
    }

    printf("\nLegenda: 0 = Água | 3 = Navio\n");

    return 0;
}
